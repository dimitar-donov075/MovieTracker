@model MovieTracker.Models.Series

@{
    ViewBag.Title = "Изтрий";
}

<h2>Изтриване</h2>

<h3>Сигурен ли си, че искаш да го изтриеш?</h3>
<div>
    <h4>Сериали</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <strong>Заглавие</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            <strong>Жанр</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            <strong>Дата на пускане</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AirDate)
        </dd>

        <dt>
            <strong>Сезон</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Season)
        </dd>

        <dt>
            <strong>Епизод</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Episode)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Изтрий" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
