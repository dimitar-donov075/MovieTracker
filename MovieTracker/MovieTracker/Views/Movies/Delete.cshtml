@model MovieTracker.Models.Movie

@{
    ViewBag.Title = "Изтрий";
}

<h2>Изтрий</h2>

<h3>Сигурен ли си, че искаш да го изтриеш?</h3>
<div>
    <h4>Филми</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <strong>Заглавие</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            <strong>Жанр</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            <strong>Дата на гледане</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfWatching)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Изтрий" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
