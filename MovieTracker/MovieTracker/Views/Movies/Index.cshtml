@model IEnumerable<MovieTracker.Models.Movie>

@{
    ViewBag.Title = "Филми";
}

<h2>Филми</h2>

<p>
    @Html.ActionLink("Добави нов", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <strong>Заглавие</strong>
        </th>
        <th>
            <strong>Жанр</strong>
        </th>
        <th>
            <strong>Дата на гледане</strong>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfWatching)
        </td>
        <td>
            @Html.ActionLink("Редактирай", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детайли", "Details", new { id=item.Id }) |
            @Html.ActionLink("Изтрий", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
